<html>

    <head>
        <%- include('partials/head') %>
        <title>Admin</title>
    </head>

    <body>

        <%- include('partials/navbar') %>

        <div class="content">
            <%- include('partials/header') %>

            <main class="container">
                <div class="bg-light p-5 rounded">
                    <h1>Administrar productos</h1>
